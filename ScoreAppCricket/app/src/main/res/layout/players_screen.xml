<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/createnewplayer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:text="Create New Player" />

    <Button
        android:id="@+id/deleteaplayer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createnewplayer_button"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="Delete a Player" />

    <Button
        android:id="@+id/playerslist_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deleteaplayer_button"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="Players List" />

</RelativeLayout>