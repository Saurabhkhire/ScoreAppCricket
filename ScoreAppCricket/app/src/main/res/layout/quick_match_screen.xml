<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/normalmatch_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="0dp"
        android:text="Normal Match" />

    <Button
        android:id="@+id/strikeronlymatch_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/normalmatch_button"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="Striker Only Match" />

    <Button
        android:id="@+id/singleplayermatch_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/strikeronlymatch_button"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="Single Player Match" />

</RelativeLayout>