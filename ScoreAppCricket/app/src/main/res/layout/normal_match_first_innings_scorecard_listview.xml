<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aaaa"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/PlayerNameTxt"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="PlayerName"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/BatsmanRunsTxt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/PlayerNameTxt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="200dp"
        android:layout_marginRight="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Runs"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/BatsmanBallsTxt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/BatsmanRunsTxt"
        android:layout_alignBottom="@+id/BatsmanRunsTxt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Balls"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/BatsmanFoursTxt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/BatsmanRunsTxt"
        android:layout_alignBottom="@+id/BatsmanRunsTxt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Fours"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/BatsmanSixesTxt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/BatsmanRunsTxt"
        android:layout_alignBottom="@+id/BatsmanRunsTxt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Sixes"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/BatsmanStrikeRateTxt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/BatsmanRunsTxt"
        android:layout_alignBottom="@+id/BatsmanRunsTxt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="SR"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/BatsmanNamesList"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_below="@+id/PlayerNameTxt"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="0dp"/>

    <TextView
        android:id="@+id/ScorecardTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BatsmanNamesList"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:text="ScoreCard" />


    <TextView
        android:id="@+id/TotalRunsEdit"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ScorecardTxt"
        android:layout_alignBottom="@+id/ScorecardTxt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="190dp"
        android:textSize="16sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />


    <TextView
        android:id="@+id/ScorecardSlashEdit"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ScorecardTxt"
        android:layout_alignBottom="@+id/ScorecardTxt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="180dp"
        android:textSize="16sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="/" />



    <TextView
        android:id="@+id/TotalWicketsEdit"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ScorecardTxt"
        android:layout_alignBottom="@+id/ScorecardTxt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="150dp"
        android:textSize="16sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/TotalOversEdit"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ScorecardTxt"
        android:layout_alignBottom="@+id/ScorecardTxt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:textSize="16sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />


    <TextView
        android:id="@+id/OversSlashEdit"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ScorecardTxt"
        android:layout_alignBottom="@+id/ScorecardTxt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:textSize="16sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="/" />


    <TextView
        android:id="@+id/TotalSelectedOversTxt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ScorecardTxt"
        android:layout_alignBottom="@+id/ScorecardTxt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:textSize="16sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />



</RelativeLayout>